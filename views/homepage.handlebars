<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>

      <!-- Pass needed_funding value to the helper function -->
      <h4 class="text-center">{{blog.title}}</h4>
      <p>{{blog.description}}</p>
 
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  
</div>
{{/each}}
<h1>Homepage</h1>